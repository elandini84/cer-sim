<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="SIM_CER_ROBOT">
    <xacro:arg name="initial_positions_file" default="$(find cer_ros2_control)/config/cer_sim_arms_initial_positions.yaml" />
    <xacro:arg name="input_node" default="ros2_cb_hw" />
    <xacro:arg name="input_component" default="CbHwFwPos" />
    <xacro:arg name="input_msgs_name" default="ros2_cb_msgs" />
    <xacro:arg name="input_cont_pos_write" default="true" />

    <!-- Import SIM_CER_ROBOT urdf file -->
    <xacro:include filename="$(find cer_description)/urdf/R1-SIM_urdf/cer.urdf" />

    <!-- Import control_xacro -->
    <xacro:include filename="$(find cer_ros2_control)/ros2_control/cer_sim_arms_pos_only.ros2_control.xacro" />

    <xacro:cer_sim_arms_pos_only_ros2_control name="$(arg input_component)"
     initial_positions_file="$(arg initial_positions_file)" input_node="$(arg input_node)"
     input_msgs_name="$(arg input_msgs_name)" input_cont_pos_write="$(arg input_cont_pos_write)" />
</robot>
